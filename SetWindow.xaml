<Window
    x:Class="Reminder.SetWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:Reminder"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Set"
    Width="450"
    Height="370"
    AllowsTransparency="True"
    Background="#F3F3F3"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>



            <Label
                Margin="10"
                Padding="0"
                HorizontalAlignment="Left"
                Background="Transparent"
                BorderThickness="0"
                FontSize="22"
                FontWeight="Bold">
                设置
            </Label>


            <DockPanel
                Grid.Row="1"
                Width="auto"
                Margin="0,0,0,15"
                LastChildFill="True">
                <Button
                    Width="100"
                    Margin="10,0,10,0"
                    Command="{Binding GetPathCommand}"
                    Cursor="Hand"
                    Style="{StaticResource ButtonSuccess}">
                    浏览路径
                </Button>
                <hc:TextBox
                    Margin="0,0,10,0"
                    hc:InfoElement.Placeholder="为空则使用默认提示音"
                    hc:InfoElement.ShowClearButton="True"
                    Text="{Binding MusicPath}" />
            </DockPanel>


            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <hc:ComboBox
                    Grid.Column="0"
                    Width="100"
                    Margin="10,0,10,10"
                    hc:InfoElement.Placeholder="请求类型"
                    ItemsSource="{Binding requestTypes}"
                    SelectedIndex="0"
                    SelectedItem="{Binding RequestType0}" />


                <hc:TextBox
                    Grid.Column="1"
                    Margin="0,0,10,10"
                    hc:InfoElement.Placeholder="请求接口"
                    hc:InfoElement.ShowClearButton="True"
                    Text="{Binding RequestApi0}" />
            </Grid>

            <hc:TextBox
                Grid.Row="3"
                MaxHeight="150"
                Margin="10,0,10,10"
                hc:InfoElement.Placeholder="请求体 (使用 {{标题}} {{内容}} {{时间}} 自动替换请求内容中对应部分)"
                hc:InfoElement.ShowClearButton="True"
                AcceptsReturn="True"
                Text="{Binding RequestBody0}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />

            <WrapPanel
                Grid.Row="4"
                Cursor="Hand"
                Orientation="Horizontal">
                <StackPanel
                    Width="auto"
                    Margin="10,0,0,5"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="开机启动" />

                    <ToggleButton
                        Margin="5"
                        IsChecked="{Binding Run0}"
                        Style="{StaticResource ToggleButtonSwitch.Small}" />



                </StackPanel>

                <StackPanel
                    Width="auto"
                    Margin="20,0,0,5"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="12"
                        Text="声音提醒" />

                    <ToggleButton
                        Margin="5"
                        IsChecked="{Binding Run1}"
                        Style="{StaticResource ToggleButtonSwitch.Small}" />

                </StackPanel>
            </WrapPanel>
        </Grid>

        <DockPanel
            Grid.Row="2"
            Cursor="Hand"
            LastChildFill="False">
            <Button
                Width="auto"
                Margin="10"
                hc:BorderElement.CornerRadius="5"
                Command="{Binding TestCmd}"
                DockPanel.Dock="Left"
                Style="{StaticResource ButtonInfo}">
                测试接口
            </Button>
            <Button
                Width="auto"
                Margin="0,10,10,10"
                hc:BorderElement.CornerRadius="5"
                Command="{Binding SureCmd}"
                DockPanel.Dock="Left"
                Style="{StaticResource ButtonPrimary}">
                确定
            </Button>
        </DockPanel>


    </Grid>
</Window>
